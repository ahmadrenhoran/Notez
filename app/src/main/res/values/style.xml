<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.AppTheme.TextInputLayoutCustom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="hintTextAppearance">
            @style/TextAppearance.AppTheme.TextInputLayout.HintTextCustom
        </item>
    </style>

    <style name="TextAppearance.AppTheme.TextInputLayout.HintTextCustom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="buttonCustom">
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:padding">20dp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonGoogle">
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="floatActionButton">
        <item name="drawableTint">?attr/colorOnPrimary</item>
    </style>


</resources>